package result

import (
	"context"
	"fmt"

	"google.golang.org/grpc/codes"
	"google.golang.org/grpc/status"

	"{{.Module}}/pkg/lib/log"
)

type Status interface {
	Error(ctx context.Context) error
}

type errstatus struct {
	code codes.Code
	err  error
}

func (s *errstatus) Error(ctx context.Context) error {
	return status.Error(s.code, fmt.Sprintf("[%s] %+v", log.GetTraceId(ctx), s.err))
}

func New(code codes.Code, err error) Status {
	return &errstatus{
		code: code,
		err:  err,
	}
}
