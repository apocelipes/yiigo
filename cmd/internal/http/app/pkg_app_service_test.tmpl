	viper.SetConfigFile("../../../config.toml")
	if err := viper.ReadInConfig(); err != nil {
		panic(err)
	}
	// 初始化日志
	log.Init()
	// 初始化数据库
	ent.Init(context.Background())
	// 执行测试
	m.Run()
	// 关闭资源
	ent.Close()
}

